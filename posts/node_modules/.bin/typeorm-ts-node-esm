#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node" --loader ts-node/esm --no-warnings "$basedir/../typeorm/cli-ts-node-esm.js" "$@"
  ret=$?
else 
  node --loader ts-node/esm --no-warnings "$basedir/../typeorm/cli-ts-node-esm.js" "$@"
  ret=$?
fi
exit $ret
